<ToolBar xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufms.vaucangraph.app.toolbar.ToolbarView">
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
   <Button fx:id="btnNew" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>

               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/new2.png" />
               </ImageView>
            </VBox>

      </graphic>
   </Button>
   <Button fx:id="btnOpen" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>
            <children>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@/icons/open2.png" />
                  </ImageView>
            </children>
         </VBox>
      </graphic>
   </Button>

   <Button fx:id="btnSave" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/save2.png" />
               </ImageView>
            </children>
         </VBox>
      </graphic>
   </Button>

   <Separator orientation="VERTICAL" />
   <Button fx:id="btnUndo" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/undo2.png" />
               </ImageView>
            </children>
         </VBox>
      </graphic>
   </Button>

   <Button fx:id="btnRedo" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/redo2.png" />
               </ImageView>
            </children>
         </VBox>
      </graphic>
   </Button>
   <Separator orientation="VERTICAL" />
   <ComboBox fx:id="zoomComboBox" maxHeight="27.0" maxWidth="120.0" minHeight="20.0" minWidth="120.0" prefHeight="27.0" prefWidth="120.0" value="Fit page">

   </ComboBox>

   <Button fx:id="btnZoomIn" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/zoomIn2.png" />
               </ImageView>
            </children>
         </VBox>
      </graphic>
   </Button>

   <Button fx:id="btnZoomOut" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
      <graphic>
         <VBox>
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/zoomOut2.png" />
               </ImageView>
            </children>
         </VBox>
      </graphic>
   </Button>
   <Separator orientation="VERTICAL" />
   <Label>
      <graphic>
         <VBox>
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@/icons/width2.png" />
               </ImageView>
            </children>
         </VBox>
      </graphic>
   </Label>

   <TextField fx:id="width" maxHeight="20.0" maxWidth="80.0" minHeight="20.0" minWidth="80.0" prefHeight="20.0" prefWidth="80.0" />
   <Label>
      <graphic>
         <VBox>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@/icons/height2.png" />
            </ImageView>
         </VBox>
      </graphic>
   </Label>

   <TextField fx:id="height" maxHeight="20.0" maxWidth="80.0" minHeight="20.0" minWidth="80.0" prefHeight="20.0" prefWidth="80.0" />
   <Separator orientation="VERTICAL" />
   <HBox alignment="CENTER">
      <ToggleButton maxHeight="20.0" maxWidth="25.0" minHeight="20.0" minWidth="25.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="25.0" styleClass="left-pill" text="O">
         <font>
            <Font size="9.0" />
         </font>
      </ToggleButton>
      <ToggleButton maxHeight="20.0" maxWidth="25.0" minHeight="20.0" minWidth="25.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="25.0" styleClass="center-pill" text="O">
         <font>
            <Font size="9.0" />
         </font>
      </ToggleButton>
      <ToggleButton maxHeight="20.0" maxWidth="25.0" minHeight="20.0" minWidth="25.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="25.0" styleClass="center-pill" text="O">
         <font>
            <Font size="9.0" />
         </font>
      </ToggleButton>
      <ToggleButton maxHeight="20.0" maxWidth="25.0" minHeight="20.0" minWidth="25.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="25.0" styleClass="right-pill" text="O">
         <font>
            <Font size="9.0" />
         </font>
      </ToggleButton>
   </HBox>
</ToolBar>
