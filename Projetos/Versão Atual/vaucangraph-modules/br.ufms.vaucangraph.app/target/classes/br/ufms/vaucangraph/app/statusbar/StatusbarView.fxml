<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufms.vaucangraph.app.statusbar.StatusbarView">
   <children>
      <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <ToggleButton fx:id="tgbDesign" maxHeight="22.0" maxWidth="130.0" minHeight="22.0" minWidth="130.0" mnemonicParsing="false" prefHeight="22.0" prefWidth="130.0" selected="true" styleClass="left-embedded" text="Design">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton fx:id="tgbVaucanson" maxHeight="22.0" maxWidth="130.0" minHeight="22.0" minWidth="130.0" mnemonicParsing="false" prefHeight="22.0" prefWidth="130.0" styleClass="right-embedded" text="VauCanSon-G Code">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </ToggleButton>
               </children>
            </HBox>
            <Label text="Pos:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="lblPosition" text="X, Y" />
         </children>
      </HBox>
      <Slider majorTickUnit="50.0" max="400.0" maxWidth="350.0" minWidth="150.0" minorTickCount="1" prefWidth="250.0" value="100.0" />
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</HBox>
